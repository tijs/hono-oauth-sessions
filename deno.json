{
  "name": "@tijs/hono-oauth-sessions",
  "version": "0.1.2",
  "description": "Storage-agnostic OAuth session management for AT Protocol with Hono - bring your own OAuth client and storage",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tijs/hono-oauth-sessions.git"
  },
  "keywords": [
    "atproto",
    "oauth",
    "hono",
    "sessions",
    "deno",
    "iron-session",
    "bluesky",
    "authentication",
    "storage-agnostic"
  ],
  "exports": "./mod.ts",
  "publish": {
    "exclude": [
      ".github/",
      ".vscode/",
      "coverage/",
      "test/",
      "*.test.ts",
      "*.bench.ts",
      ".gitignore"
    ]
  },
  "tasks": {
    "test": "deno test --allow-net --allow-read --allow-env",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt --check",
    "fmt:fix": "deno fmt",
    "lint": "deno lint",
    "ci": "deno task fmt && deno task lint && deno task check && deno task test",
    "prepare": "deno task ci"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [
      "coverage/",
      "dist/",
      "build/"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": false
  }
}
